{
  "name": "electron-video-player",
  "version": "0.1.0",
  "description": "Electron-based video.js player for playing local video files.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "LNU",
  "license": "MIT",
  "dependencies": {
    "video.js": "^8.23.4"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lnu.electronvideoplayer",
    "productName": "Electron Video Player",
    "files": [
      "src/**/*",
      "!**/*.map"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
