{
  "name": "LNU-Video-Player",
  "version": "0.1.1",
  "description": "Electron-based video.js player for playing local video files.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "LNU",
  "license": "MIT",
  "dependencies": {
    "video.js": "^8.23.4",
    "videojs-youtube": "^3.0.1"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1"
  },
  "build": {
    "appId": "com.lnu.lnuplayer",
    "productName": "LNU Player",
    "files": [
      "src/**/*",
      "!**/*.map"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "role": "Viewer"
      },
      {
        "ext": "m4v",
        "name": "M4V Video",
        "role": "Viewer"
      },
      {
        "ext": "webm",
        "name": "WebM Video",
        "role": "Viewer"
      },
      {
        "ext": "ogv",
        "name": "Ogg Video",
        "role": "Viewer"
      },
      {
        "ext": "mp3",
        "name": "MP3 Audio",
        "role": "Viewer"
      },
      {
        "ext": "m4a",
        "name": "M4A Audio",
        "role": "Viewer"
      },
      {
        "ext": "aac",
        "name": "AAC Audio",
        "role": "Viewer"
      },
      {
        "ext": "ogg",
        "name": "Ogg Audio",
        "role": "Viewer"
      },
      {
        "ext": "wav",
        "name": "WAV Audio",
        "role": "Viewer"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "fileAssociations": [
        {
          "ext": "mp4",
          "name": "MP4 Video",
          "role": "Viewer"
        },
        {
          "ext": "m4v",
          "name": "M4V Video",
          "role": "Viewer"
        },
        {
          "ext": "webm",
          "name": "WebM Video",
          "role": "Viewer"
        },
        {
          "ext": "ogv",
          "name": "Ogg Video",
          "role": "Viewer"
        },
        {
          "ext": "mp3",
          "name": "MP3 Audio",
          "role": "Viewer"
        },
        {
          "ext": "m4a",
          "name": "M4A Audio",
          "role": "Viewer"
        },
        {
          "ext": "aac",
          "name": "AAC Audio",
          "role": "Viewer"
        },
        {
          "ext": "ogg",
          "name": "Ogg Audio",
          "role": "Viewer"
        },
        {
          "ext": "wav",
          "name": "WAV Audio",
          "role": "Viewer"
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo",
      "mimeTypes": [
        "video/mp4",
        "video/webm",
        "video/ogg",
        "audio/mpeg",
        "audio/mp4",
        "audio/aac",
        "audio/ogg",
        "audio/wav"
      ],
      "icon": "build/icon.png"
    },
    "electronDist": "node_modules/electron/dist"
  }
}
