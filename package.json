{
  "name": "electron-video-player",
  "version": "0.1.1",
  "description": "Electron-based video.js player for playing local video files.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "LNU",
  "license": "MIT",
  "dependencies": {
    "video.js": "^8.23.4",
    "videojs-youtube": "^3.0.1"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lnu.electronvideoplayer",
    "productName": "Electron Video Player",
    "files": [
      "src/**/*",
      "!**/*.map"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "role": "Viewer"
      },
      {
        "ext": "m4v",
        "name": "M4V Video",
        "role": "Viewer"
      },
      {
        "ext": "mov",
        "name": "QuickTime Movie",
        "role": "Viewer"
      },
      {
        "ext": "webm",
        "name": "WebM Video",
        "role": "Viewer"
      },
      {
        "ext": "mkv",
        "name": "Matroska Video",
        "role": "Viewer"
      },
      {
        "ext": "avi",
        "name": "AVI Video",
        "role": "Viewer"
      },
      {
        "ext": "wmv",
        "name": "Windows Media Video",
        "role": "Viewer"
      },
      {
        "ext": "flv",
        "name": "Flash Video",
        "role": "Viewer"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "fileAssociations": [
        {
          "ext": "mp4",
          "name": "MP4 Video",
          "role": "Viewer"
        },
        {
          "ext": "m4v",
          "name": "M4V Video",
          "role": "Viewer"
        },
        {
          "ext": "mov",
          "name": "QuickTime Movie",
          "role": "Viewer"
        },
        {
          "ext": "webm",
          "name": "WebM Video",
          "role": "Viewer"
        },
        {
          "ext": "mkv",
          "name": "Matroska Video",
          "role": "Viewer"
        },
        {
          "ext": "avi",
          "name": "AVI Video",
          "role": "Viewer"
        },
        {
          "ext": "wmv",
          "name": "Windows Media Video",
          "role": "Viewer"
        },
        {
          "ext": "flv",
          "name": "Flash Video",
          "role": "Viewer"
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo",
      "mimeTypes": [
        "video/mp4",
        "video/quicktime",
        "video/webm",
        "video/x-matroska",
        "video/x-msvideo",
        "video/x-ms-wmv",
        "video/x-flv"
      ],
      "icon": "build/icon.png"
    },
    "electronDist": "node_modules/electron/dist"
  }
}
